{
  "name": "@sh/node",
  "version": "0.0.1",
  "private": true,
  "engines": {
    "node": ">=12.18.0"
  },
  "node-red": {
    "nodes": {
      "node": "build/node.js"
    }
  },
  "scripts": {
    "build:backend": "yarn build-with-webpack -t backend -n node",
    "build:frontend": "yarn build-with-webpack -t frontend -n node",
    "build": "concurrently \"yarn build:backend\" \"yarn build:frontend\"",
    "clean": "rimraf build coverage",
    "lint": "eslint src --ext .ts,.tsx,.js --color",
    "start:backend": "yarn build-with-webpack -t backend -n node -w",
    "start:frontend": "yarn build-with-webpack -t frontend -n node -w",
    "start": "concurrently \"yarn start:backend\" \"yarn start:frontend\"",
    "test": "jest --env=jsdom --coverage --colors",
    "tsc": "tsc -p ./tsconfig.json"
  }
}
