{
  "name": "@sh/smart-home-ui",
  "version": "0.0.1",
  "private": true,
  "engines": {
    "node": ">=12.17.0"
  },
  "scripts": {
    "build:backend-maybe": "yarn build-with-webpack -t backend -n smart-home-ui",
    "build:frontend-maybe": "yarn build-with-webpack -t frontend -n smart-home-ui",
    "build-maybe": "concurrently \"yarn build:backend\" \"yarn build:frontend\"",
    "clean": "rimraf build coverage",
    "lint-maybe": "eslint src --ext .ts,.tsx,.js --color",
    "start:backend-maybe": "yarn build-with-webpack -t backend -n smart-home-ui -w",
    "start:frontend-maybe": "yarn build-with-webpack -t frontend -n smart-home-ui -w",
    "start-maybe": "concurrently \"yarn start:backend\" \"yarn start:frontend\"",
    "test-maybe": "jest --env=jsdom --coverage --colors",
    "tsc-maybe": "tsc -p ./tsconfig.json",
    "prettify": "yarn prettier --write ./src/"
  },
  "main": "./src/index.ts"
}
